#
# the dice and hand info
#
########################

dice_vals = {'numbers':[1,2,3,4,5,6],
             'colors':['black','red','green','green','red','black']
             }

class dice():
    def __init__(self):
        self.number = -1
        self.color = 'none'
        return

    def set_color(self, color):
        self.color = color
        return

    def set_number(self, number):
        self.number = number
        return

dice_set = []

for a,b in zip(dice_vals['numbers'],dice_vals['colors']):
    new_dice = dice()
    new_dice.color = b
    new_dice.number = a
    dice_set.append(new_dice)

class hand_element():
    def __init__(self):
        self.num_match = -1
        self.color_match = -1
        return

    def set_color_match(self, color_num):
        self.color_match = color_match
        return

    def set_num_match(self, num_match):
        self.num_match = num_match
        return

class hand():
    def __init__(self):
        self.hand_reqs=[]
        self.score = -1


